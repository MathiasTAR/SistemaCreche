<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="653.0" prefWidth="884.0" spacing="20.0" style="-fx-background-color: #f8fdf8;" xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml" fx:controller="com.salo.sistemacreche.controller.HomeController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Cards de Estatísticas (menores) -->
    <HBox alignment="CENTER" spacing="15.0">
        <VBox prefHeight="8.0" prefWidth="314.0" spacing="5.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15; -fx-pref-width: 250;">
            <Label style="-fx-text-fill: #0f766e; -fx-font-size: 12; -fx-font-weight: bold;" text="Pré matrículas:" />
            <Label fx:id="labelPreMatriculas" style="-fx-text-fill: #0f766e; -fx-font-size: 20; -fx-font-weight: bold;" text="0" />
        </VBox>

        <VBox prefHeight="86.0" prefWidth="514.0" spacing="5.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15; -fx-pref-width: 250;">
            <Label style="-fx-text-fill: #0f766e; -fx-font-size: 12; -fx-font-weight: bold;" text="Matrículas Ativas:" />
            <Label fx:id="labelMatriculas" style="-fx-text-fill: #0f766e; -fx-font-size: 20; -fx-font-weight: bold;" text="0" />
        </VBox>

    </HBox>

    <!-- Conteúdo Principal -->
    <HBox alignment="CENTER" spacing="15.0">
        <!-- Coluna 1: Pré-matrículas recentes -->
        <VBox prefHeight="268.0" prefWidth="482.0" spacing="10.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15; -fx-pref-width: 400;">
            <Label style="-fx-text-fill: #0f766e; -fx-font-size: 16; -fx-font-weight: bold;" text="Pré-matrículas recentes" />

            <ScrollPane fitToWidth="true" prefHeight="200.0" style="-fx-background: #f8fbfd; -fx-border-radius: 3; -fx-border-color: #e8f5e8; -fx-background-radius: 3;">
                <VBox fx:id="cardsContainerPreMatriculas" spacing="10.0" style="-fx-background-color: #f8fdf8;" />
            </ScrollPane>
        </VBox>

        <!-- Coluna 2: Matrículas recentes -->
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-border-color: #c8e1e6; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15; -fx-pref-width: 400;">
            <Label style="-fx-text-fill: #0f766e; -fx-font-size: 16; -fx-font-weight: bold;" text="Matrículas recentes" />

            <ScrollPane fitToWidth="true" prefHeight="200.0" style="-fx-background: #f8fbfd; -fx-border-radius: 3; -fx-border-color: #e8f5e8; -fx-background-radius: 3;">
                <VBox fx:id="cardsContainerMatriculas" spacing="10.0" style="-fx-background-color: #f8fdf8;" />
            </ScrollPane>
        </VBox>
    </HBox>

</VBox>
