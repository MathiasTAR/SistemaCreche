                    <TextArea fx:id="fieldProblemasSaude" prefHeight="60.0" prefWidth="800.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />

                    <Label text="Mobilidade Reduzida:" />
                    <ComboBox fx:id="comboMobilidadeReduzida" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                </VBox>
            </VBox>

            <!-- ========== SEÇÃO 2: DADOS DO RESPONSÁVEL ========== -->
