                        <CheckBox fx:id="checkDeficienciaMultipla" text="Deficiência múltipla" />
                        <CheckBox fx:id="checkEducacaoEspecial" text="Educação especial" />
                    </VBox>
                </HBox>

                <!-- Campos condicionais -->
