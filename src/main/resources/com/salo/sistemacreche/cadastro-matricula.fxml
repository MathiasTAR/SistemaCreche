                        <VBox spacing="5">
                            <CheckBox fx:id="checkColetorPublico" text="Coletor Público" />
                            <CheckBox fx:id="checkTV" text="TV" />
                            <CheckBox fx:id="checkDVD" text="DVD" />
                            <CheckBox fx:id="checkComputador" text="Computador" />
                        </VBox>
                        <VBox spacing="5">
