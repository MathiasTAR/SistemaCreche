                        <TextField fx:id="fieldTelefoneResidencial" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                    </children>
                </GridPane>
            </VBox>

            <!-- ========== SEÇÃO 4: SITUAÇÃO HABITACIONAL ========== -->
