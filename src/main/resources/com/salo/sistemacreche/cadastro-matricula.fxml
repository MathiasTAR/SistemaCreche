                        <ComboBox fx:id="comboTipoMoradia" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

