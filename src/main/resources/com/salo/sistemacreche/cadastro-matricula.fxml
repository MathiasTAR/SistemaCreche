                        <Label text="RG:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldRgResponsavel" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <!-- Linha 3 -->
                        <Label text="Data Nascimento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <DatePicker fx:id="fieldDataNascimentoResponsavel" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Telefone:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="fieldTelefoneResponsavel" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <!-- Linha 4 -->
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="fieldEmailResponsavel" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Local Trabalho:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <TextField fx:id="fieldLocalTrabalho" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                    </children>
                </GridPane>

                <!-- Informações de auxílio governo -->
                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <CheckBox fx:id="checkAuxilioGoverno" text="Recebe auxílio governo" />

                    <HBox spacing="10" style="-fx-padding: 5 0 0 20;">
                        <Label text="Tipo Auxílio:" />
                        <ComboBox fx:id="comboTipoAuxilio" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />

                        <Label text="Número NIS:" />
                        <TextField fx:id="fieldNumeroNIS" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- ========== SEÇÃO 3: ENDEREÇO ========== -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-border-color: #e8f5e8; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 20;">
                <Label style="-fx-text-fill: #2e7d32; -fx-font-weight: bold;" text="3. Endereço">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints prefWidth="300" />
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints prefWidth="300" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <children>
                        <!-- Linha 1 -->
                        <Label text="Logradouro:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="fieldLogradouro" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0" />

                        <!-- Linha 2 -->
                        <Label text="Número:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldNumero" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Complemento:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="fieldComplemento" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <!-- Linha 3 -->
                        <Label text="Bairro:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="fieldBairro" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Município:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="fieldMunicipio" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <!-- Linha 4 -->
                        <Label text="CEP:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="fieldCEP" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: #c8e6c9; -fx-border-radius: 5; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="UF:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
