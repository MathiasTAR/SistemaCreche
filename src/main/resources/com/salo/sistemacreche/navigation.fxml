                    <Image url="@icons/cadastrarIcon.png" />
                </image>
            </ImageView>
        </graphic></Button>

    <Button fx:id="btnListaPreMatriculas" mnemonicParsing="false" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #115e59; -fx-text-fill: white; -fx-alignment: start;" text="Pré-Matrículas">
