<VBox prefWidth="220.0" spacing="8.0" style="-fx-background-color: #115e59; -fx-padding: 10 10 20 10;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salo.sistemacreche.controller.NavigationController">
    <HBox alignment="CENTER" prefHeight="64.0" prefWidth="199.0">
